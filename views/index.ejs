<!DOCTYPE html>
<html>
    <head>
        <title>IMBD's Top 1000</title>
        <link rel="stylesheet" href="/styles/index.css">
        <link rel="stylesheet" href="/styles/animations.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js" integrity="sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E=" crossorigin="anonymous"></script>
        <script src="/js/index.js"></script>
    </head>
    <body>
        <div id="nav">
            <div class="btn" id="1">Top 1000</div>
            <div class="btn" id="2">User Submitted</div>
            <div class="btn" id="3">My Favorites</div>
        </div>
        <div id="btm_bar"></div>
        <div id="tab_1" class="content">
            <h1 id="title">IMDB's Top 1000 Films</h1>
            <div id="list_main"></div>
        </div>
        <div id="form_poppup">
            <div id="form_box">
                <div id="insert_form">
                    <div class="form_row">
                        <input type="text" id="poster-link" class="form_input" placeholder="Poster Link" autocomplete="on">
                        <input type="text" id="series-title" class="form_input" placeholder="Series Title" autocomplete="on">
                        <input type="date" id="released-year" class="form_input" placeholder="Released Year" autocomplete="on">
                        <input type="text" id="cert" class="form_input" placeholder="Certification" autocomplete="on">
                    </div>
                    <div class="form_row">
                        <input type="text" id="runtime" class="form_input" placeholder="Runtime" autocomplete="on">
                        <input type="text" id="genre" class="form_input" placeholder="Genre" autocomplete="on">
                        <input type="text" id="imdb-rating" class="form_input" placeholder="IMDB Rating" autocomplete="on">
                        <input type="text" id="overview" class="form_input" placeholder="Overview" autocomplete="on">
                    </div>
                    <div class="form_row">
                        <input type="text" id="meta-score" class="form_input" placeholder="Meta Score" autocomplete="on">
                        <input type="text" id="director" class="form_input" placeholder="Director" autocomplete="on">
                        <input type="text" id="star1" class="form_input" placeholder="Star 1" autocomplete="on">
                        <input type="text" id="star2" class="form_input" placeholder="Star 2" autocomplete="on">
                    </div>
                    <div class="form_row">
                        <input type="text" id="star3" class="form_input" placeholder="Star 3" autocomplete="on">
                        <input type="text" id="star4" class="form_input" placeholder="Star 4" autocomplete="on">
                        <input type="number" id="votes" class="form_input" placeholder="No. of Votes" autocomplete="on">
                        <input type="text" id="gross" class="form_input" placeholder="Gross" autocomplete="on">
                    </div>
                    <div class="btn-form n">Cancel</div>
                    <div id="btn-submit" class="btn-form n">Submit</div>
                </div>
                <div id="update_form">
                    <div class="btn-form n">Cancel</div>
                    <div id="btn-delete" class="btn-form n">Delete</div>
                    <div id="btn-update" class="btn-form">Update</div>
                </div>
                
                
            </div>
        </div>
        <div id="tab_2" class="content">
            <h1 id="title">User Submitted</h1>
            <div class="listItem temp_item">
                <div class="item_main">
                    <h1 class="temp_title">Add more items!</h1>
                </div>
            </div>
        <div id="list_submitted"></div>
        <div id="tab_3" class="content">
            <h1 id="title">My Favorites</h1>
    </body>
</html>